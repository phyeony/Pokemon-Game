<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:rotation="-5"
        android:alpha="0.9"
        android:scaleType="fitXY"
        android:src="@drawable/pokedex1" />

    <ImageButton
        android:id="@+id/btnReturnToMainMenu"
        android:layout_width="204dp"
        android:layout_height="55dp"
        android:layout_marginBottom="92dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_empty_img" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="136dp"
        android:layout_height="221dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/abeezee"
        android:text="@string/congrats_you_caught_all_pokemons"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"
        android:text="@string/return_btn"
        android:textColor="#040404"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnReturnToMainMenu"
        app:layout_constraintEnd_toEndOf="@+id/btnReturnToMainMenu"
        app:layout_constraintStart_toStartOf="@+id/btnReturnToMainMenu"
        app:layout_constraintTop_toTopOf="@+id/btnReturnToMainMenu" />


</androidx.constraintlayout.widget.ConstraintLayout>